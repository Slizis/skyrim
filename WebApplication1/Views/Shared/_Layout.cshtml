<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkyrimWiki</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Index">SkyrimWiki</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity.IsAuthenticated)
                    {
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                                <a class="btn btn-light" asp-area="" asp-controller="Items" asp-action="Index">Предметы</a>
                        </li>
                        <li class="nav-item">
                                <a class="btn btn-light" asp-area="" asp-controller="NPCs" asp-action="Index">NPC</a>
                        </li>
                        <li class="nav-item">
                                <a class="btn btn-light" asp-area="" asp-controller="Plants" asp-action="Index">Растения</a>
                        </li>
                        <li class="nav-item">
                                <a class="btn btn-light" asp-area="" asp-controller="Quests" asp-action="Index">Задания</a>
                        </li>
                        <li class="nav-item">
                                <a class="btn btn-light" asp-area="" asp-controller="Screams" asp-action="Index">Крики</a>
                        </li>
                        <li class="nav-item">
                                <a class="btn btn-light" asp-area="" asp-controller="Spells" asp-action="Index">Заклинания</a>
                        </li>
                        <li class="nav-item">
                                <a class="btn btn-light" asp-area="" asp-controller="Talents" asp-action="Index">Таланты</a>
                        </li>
                        <li class="nav-item">
                                <a class="btn btn-light" asp-area="" asp-controller="Weapons" asp-action="Index">Крики</a>
                        </li>
                    </ul>
                    }
                    else
                    {
                        <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Register">Просмотр содержимого доступен только для авторизированных пользователей </a>
                    }
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - SkyrimWiki - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>